---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import slugify from "@utils/slugify";
import { SOCIALS } from "@config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero" class="hero-section">
      <h1>Hi I'm Kevin.</h1>
      <p>
        <div class="circular-image">
          <img src="/assets/hero.jpg" alt="Profile Pic">
        </div>
        I'm a <b>Web Developer</b> and this is my Personal Blog for Documentation and writing about useful Software and Linux
        related topics. Creating a Histogram on all the things I have ever seen. Also Setups/Tutorials to paste
        from that I need constantly. <br/><br/> This side serves as a Hub from which to find all important links
        and documentations I created. You will find a downloadable CV and my contact data, have fun!
      </p>
      {
        // only display if at least one social link is enabled
        socialCount > 0 && (
          <div class="social-wrapper">
            <div class="social-links">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>
    <section id="fields">
      <h2>Fields of Work</h2>
      <ul>
        <li><b>ðŸ’» Full-Stack Web Developement: </b>Starting with Java-Spring and now trying out different Python-Frameworks.</li>
        <li><b>ðŸ”¢ Data Science: </b>Mostly playing around with R or working with Pandas.</li>
        <li><b>ðŸ§  Machine Learning: </b>From linear regression to SVNs.</li>
        <a href="link-to-your-CV" class="download-button">Download CV</a>
    </ul>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <h2>Featured Posts</h2>
            <ul>
              {featuredPosts.map(({ data }) => (
                <Card
                  href={`/posts/${slugify(data)}`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          <Hr />
        </>
      )
    }
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  .hero-image {
  }

  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    position: relative;
    @apply my-2;
  }

.hero-section {
  color: white; /* Text color */
  padding: 30px;
  overflow: hidden; /* Clear the float */
}

        /* Add CSS styles for the paragraph block */
        #hero p {
            margin-right: 150px; /* Add margin to make space for the circular image */
        }
.circular-image {
  float: right;
  width: 35%; /* Adjust the width as needed */
  margin-bottom: 20px;
  margin-left: 20px;
}

.circular-image img {
  width: 100%; /* Make the image responsive */
  height: auto;
  border-radius: 50%;
}
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  #fields {
            background-color: rgb(42, 44, 82); /* Grey background color */
            border-radius: 10px; /* Rounded corners */
            padding: 30px; /* Add some padding for spacing */
        }

  #fields h2{
    @apply my-4 inline-block text-3xl font-bold sm:my-7 sm:text-3xl;
  }

  .download-button {
            background-color: #222; /* Darker background color */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            margin-top: 10px; /* Add spacing between button and list */
        }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
